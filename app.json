{
  "name": "Cannoh-MD-Bot",
  "description": "A WhatsApp multi-device bot built with Baileys library",
  "repository": "https://github.com/YOUR_USERNAME/YOUR_REPO_NAME",
  "logo": "https://raw.githubusercontent.com/whiskeysockets/Baileys/main/docs/logo.png",
  "keywords": ["whatsapp-bot", "baileys", "multi-device", "nodejs", "bot"],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "env": {
    "SESSION_ID": {
      "description": "Session identifier for your bot",
      "value": "cannoh-md",
      "required": false
    },
    "PREFIX": {
      "description": "Bot command prefix (usually . or !)",
      "value": ".",
      "required": false
    },
    "MODS": {
      "description": "Bot moderators (comma-separated WhatsApp numbers with country code)",
      "value": "254781346242",
      "required": false
    },
    "MONGODB_URI": {
      "description": "MongoDB connection string for database",
      "value": "mongodb+srv://username:password@cluster.mongodb.net/dbname",
      "required": false
    },
    "OWNER_NUMBER": {
      "description": "Bot owner's WhatsApp number with country code",
      "value": "919876543210",
      "required": true
    },
    "OPENAI_API_KEY": {
      "description": "OpenAI API key for AI features (optional)",
      "value": "",
      "required": false
    }
  },
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "free"
    }
  }
}
